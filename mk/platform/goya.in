# Intel ICC has problems with gdb debuging (otherwise should be faster)
CXX=g++-4.4
CC=gcc-4.4
# CXX=pgCC
# CC=pgcc
# CXX=icpc
# CC=icc
# CXX=clang++
# CC=clang

enable_64bit=yes

# enable_debug=yes
# enable_debug=memory,reference,valgrind
with_cxxflags_dbg="-funroll-loops -fno-inline"
with_cxxflags_opt="-mtune=native -march=native -g"

prefix="$HOME/install/sat"
with_hdf5_libs=-lz

enable_openmp=yes
enable_mpi=yes

with_mpicc=mpicc
with_mpirun="mpirun -np @NP @PROG @ARGS"
